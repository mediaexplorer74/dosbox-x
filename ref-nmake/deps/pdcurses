CC		=	cl
CXX		=   cl
LD		= 	link
LIBR	=	lib
WINDRES =	rc

PDCURSES = ..\..\vs\libpdcurses

CXXFLAGS =  -nologo -O2 -MT -DNDEBUG -I$(PDCURSES)

CFLAGS	=	-nologo -O2 -MT -DNDEBUG -I$(PDCURSES)

LFLAGS	=	-nologo

TARGET	=	pdcurses.lib

OBJS	=	$(PDCURSES)\pdcurses\addch.obj \
			$(PDCURSES)\pdcurses\addchstr.obj \
